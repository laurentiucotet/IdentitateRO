---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Solicită un Logo — IdentitateRO" description="Nu găsești o instituție? Solicită adăugarea logo-ului în registrul IdentitateRO.">
  <div class="max-w-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Page Header -->
    <header class="text-center mb-8">
      <h1 class="text-2xl sm:text-3xl font-bold text-primary-900 mb-3">Nu găsești o instituție?</h1>
      <p class="text-sm text-surface-500">
        Trimite-ne o solicitare și vom adăuga logo-ul în registru.
        Sau, și mai bine, contribuie direct pe GitHub!
      </p>
    </header>

    <!-- Form -->
    <form id="request-form" class="bg-white rounded border border-surface-200 shadow-card p-5 sm:p-6 space-y-5">
      <!-- Institution Name -->
      <div>
        <label for="institution-name" class="block text-xs font-medium text-primary-900 mb-1">
          Numele Instituției <span class="text-red-500">*</span>
        </label>
        <input
          type="text"
          id="institution-name"
          name="institution_name"
          required
          placeholder="ex: Primăria Municipiului Brașov"
          class="w-full px-3 py-2 rounded border border-surface-200 text-xs
                 placeholder-surface-400 focus:outline-none focus:border-primary-500 focus:ring-2 focus:ring-primary-500/10"
        />
      </div>

      <!-- Website -->
      <div>
        <label for="institution-website" class="block text-xs font-medium text-primary-900 mb-1">
          Website Oficial
          <span class="text-surface-400 font-normal">(opțional)</span>
        </label>
        <input
          type="url"
          id="institution-website"
          name="website"
          placeholder="https://www.primaria-brasov.ro"
          class="w-full px-3 py-2 rounded border border-surface-200 text-xs
                 placeholder-surface-400 focus:outline-none focus:border-primary-500 focus:ring-2 focus:ring-primary-500/10"
        />
      </div>

      <!-- Category -->
      <div>
        <label for="institution-category" class="block text-xs font-medium text-primary-900 mb-1">
          Tip Instituție
        </label>
        <select
          id="institution-category"
          name="category"
          class="w-full px-3 py-2 rounded border border-surface-200 text-xs text-primary-900
                 focus:outline-none focus:border-primary-500 focus:ring-2 focus:ring-primary-500/10"
        >
          <option value="">— Selectează —</option>
          <option value="guvern">Guvern / Prezidență</option>
          <option value="minister">Minister</option>
          <option value="agentie">Agenție Guvernamentală</option>
          <option value="autoritate">Autoritate Independentă</option>
          <option value="primarie">Primărie</option>
          <option value="consiliu-judetean">Consiliu Județean</option>
          <option value="prefectura">Prefectură</option>
          <option value="proiect-ue">Proiect UE / PNRR</option>
          <option value="institutie-cultura">Instituție de Cultură</option>
          <option value="altele">Altele</option>
        </select>
      </div>

      <!-- Notes -->
      <div>
        <label for="notes" class="block text-xs font-medium text-primary-900 mb-1">
          Alte Mențiuni
          <span class="text-surface-400 font-normal">(opțional)</span>
        </label>
        <textarea
          id="notes"
          name="notes"
          rows="3"
          placeholder="De exemplu: Am găsit manualul de identitate pe site-ul lor, link-ul este..."
          class="w-full px-3 py-2 rounded border border-surface-200 text-xs
                 placeholder-surface-400 resize-y
                 focus:outline-none focus:border-primary-500 focus:ring-2 focus:ring-primary-500/10"
        ></textarea>
      </div>

      <!-- Submit -->
      <div class="flex flex-col sm:flex-row gap-3">
        <button type="submit" class="btn-primary flex-1 justify-center">
          Trimite Solicitarea
        </button>
        <a
          href="https://github.com/laurentiucotet/IdentitateRO/issues/new?template=logo-request.md"
          target="_blank"
          rel="noopener"
          class="btn-outline flex-1 justify-center"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Deschide pe GitHub
        </a>
      </div>
    </form>

    <!-- Info Note -->
    <p class="mt-6 text-xs text-surface-400 text-center">
      Solicitările sunt procesate în mod voluntar. Pentru cel mai rapid rezultat,
      contribuie direct cu un Pull Request pe GitHub.
    </p>
  </div>
</BaseLayout>

<script>
  // Simple form handler — in production, connect to a backend or GitHub API
  const form = document.getElementById('request-form') as HTMLFormElement;
  form.addEventListener('submit', (e) => {
    e.preventDefault();

    const data = new FormData(form);
    const name = data.get('institution_name');

    // For MVP — redirect to GitHub issue
    const title = encodeURIComponent(`[Solicitare Logo] ${name}`);
    const body = encodeURIComponent(
      `## Instituție solicitată\n\n` +
      `**Nume:** ${name}\n` +
      `**Website:** ${data.get('website') || 'N/A'}\n` +
      `**Categorie:** ${data.get('category') || 'N/A'}\n` +
      `**Mențiuni:** ${data.get('notes') || 'N/A'}\n`
    );

    window.open(
      `https://github.com/laurentiucotet/IdentitateRO/issues/new?title=${title}&body=${body}&labels=logo-request`,
      '_blank'
    );
  });
</script>
