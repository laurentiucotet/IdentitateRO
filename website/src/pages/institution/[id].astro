---
import BaseLayout from '../../layouts/BaseLayout.astro';
import institutionIndex from '../../data/institutions-index.json';
import { getAllDownloadableAssets, getPrimaryLogoPath } from '../../lib/helpers';
import { resolveAssetPath } from '../../lib/cdn-helpers';
import {
  CATEGORY_LABELS_SINGULAR,
  LOGO_LAYOUT_LABELS,
  LOGO_VARIANT_LABELS,
  COLOR_USAGE_LABELS,
  QUALITY_LABELS,
} from '../../lib/labels';

import type { Institution, LogoLayout } from '../../types/institution';

export async function getStaticPaths() {
  return (institutionIndex.institutions as any[]).map(inst => ({
    params: { id: inst.slug },
    props: { institution: inst as Institution }
  }));
}

const { institution: inst } = Astro.props;

const title = `${inst.name} — IdentitateRO`;
const description = `Logo-uri și identitate vizuală pentru ${inst.name}. ${inst.description || ''}`;

const primaryLogo = getPrimaryLogoPath(inst);
const downloadables = getAllDownloadableAssets(inst);

const logoLayouts: Array<{key: string; layout: LogoLayout}> = [
  { key: 'horizontal', layout: 'horizontal' },
  { key: 'vertical', layout: 'vertical' },
  { key: 'symbol', layout: 'symbol' }
];
const qualityInfo = inst.meta.quality ? QUALITY_LABELS[inst.meta.quality] : undefined;

// Compute CDN path dynamically based on actual main asset
const cdnBasePath = `https://cdn.jsdelivr.net/npm/@identitate-ro/logos/logos/${inst.id}`;
const mainLayout = inst.assets.main?.type || 'horizontal';
const cdnLogoPath = `${cdnBasePath}/${mainLayout}/color.svg`;
---

<BaseLayout title={title} description={description}>
  <article class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header -->
    <header class="mb-10">
      <div class="flex items-center gap-3 mb-4">
        <a href="/" class="text-primary-500 hover:text-primary-600 text-sm flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Înapoi la toate
        </a>
      </div>

      <div class="flex flex-wrap items-start gap-4">
        <div class="flex-1 min-w-0">
          <h1 class="text-2xl sm:text-3xl font-bold text-primary-900 mb-2">{inst.name}</h1>

          <div class="flex flex-wrap items-center gap-2 mb-3">
            {inst.shortname && (
              <span class="px-2 py-0.5 bg-primary-100 text-primary-700 rounded text-xs font-semibold">
                {inst.shortname.toUpperCase()}
              </span>
            )}
            <span class="px-2 py-0.5 bg-surface-100 text-surface-600 rounded text-xs">
              {CATEGORY_LABELS_SINGULAR[inst.category] || inst.category}
            </span>

          </div>

          {inst.description && (
            <p class="text-sm text-surface-500 mb-2">{inst.description}</p>
          )}

          {inst.location && (
            <p class="text-xs text-surface-400 flex items-center gap-1">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              {[inst.location.city, inst.location.county].filter(Boolean).join(', ')}
            </p>
          )}

          {inst.usage_notes && (
            <div class="mt-3 p-3 bg-amber-50 border border-amber-200 rounded text-xs text-amber-800">
              <strong>Note de utilizare:</strong> {inst.usage_notes}
            </div>
          )}
        </div>

        {/* Mini preview în header */}
        {primaryLogo && (
          <div class="shrink-0 w-20 h-20 sm:w-24 sm:h-24 bg-white border border-surface-200 rounded p-3 flex items-center justify-center">
            <img src={primaryLogo} alt={`Logo ${inst.name}`} class="max-w-full max-h-full object-contain" />
          </div>
        )}
      </div>

      {/* Keywords */}
      {inst.meta.keywords && inst.meta.keywords.length > 0 && (
        <div class="flex flex-wrap gap-1.5 mt-4">
          {inst.meta.keywords.map((keyword: string) => (
            <span class="px-2 py-0.5 bg-surface-50 border border-surface-200 rounded-full text-[10px] text-surface-500">
              {keyword}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- ═══ LOGO-URI ═══ -->
    <section class="mb-10">
      <h2 class="text-lg font-semibold text-primary-900 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Logo-uri
      </h2>

      {logoLayouts.map(({key, layout}) => {
        const group = inst.assets[layout];
        if (!group) return null;

        const layoutLabel = LOGO_LAYOUT_LABELS[key] || key;
        const variants: [string, string][] = [];
        if (group.color) {
          const path = resolveAssetPath(group.color);
          if (path) variants.push(['color', path]);
        }
        if (group.dark_mode) {
          const path = resolveAssetPath(group.dark_mode);
          if (path) variants.push(['dark_mode', path]);
        }
        if (group.white) {
          const path = resolveAssetPath(group.white);
          if (path) variants.push(['white', path]);
        }
        if (group.black) {
          const path = resolveAssetPath(group.black);
          if (path) variants.push(['black', path]);
        }
        if (group.monochrome) {
          const path = resolveAssetPath(group.monochrome);
          if (path) variants.push(['monochrome', path]);
        }

        return (
          <div class="mb-6">
            <h3 class="text-sm font-medium text-primary-800 mb-3">{layoutLabel}</h3>

            {/* Preview-uri variante */}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-3">
              {variants.map(([variant, path]) => (
                <div class="border border-surface-200 rounded overflow-hidden">
                  <div class:list={[
                    "aspect-[3/2] flex items-center justify-center p-6",
                    variant === 'white' ? 'bg-gray-800' : 'checkerboard'
                  ]}>
                    <img
                      src={path}
                      alt={`${inst.name} — ${layoutLabel} ${LOGO_VARIANT_LABELS[variant] || variant}`}
                      class="max-w-full max-h-full object-contain"
                    />
                  </div>
                  <div class="p-2 bg-white flex items-center justify-between">
                    <div>
                      <span class="text-xs font-medium text-primary-900">{LOGO_VARIANT_LABELS[variant] || variant}</span>
                      <span class="text-[10px] text-surface-400 ml-1">SVG</span>
                    </div>
                    <div class="flex items-center gap-1">
                      <a href={path} download class="p-1 rounded hover:bg-primary-50 text-surface-400 hover:text-primary-500 transition-colors" title="Descarcă">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                      </a>
                      <button
                        type="button"
                        class="copy-btn p-1 rounded hover:bg-primary-50 text-surface-400 hover:text-primary-500 transition-colors"
                        data-asset-path={path}
                        data-asset-format="svg"
                        title="Copiază SVG"
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                      </button>
                    </div>
                  </div>
                </div>
              ))}

              {/* PNG variant */}
              {group.png && (() => {
                const pngPath = resolveAssetPath(group.png.path);
                if (!pngPath) return null;
                return (
                  <div class="border border-surface-200 rounded overflow-hidden">
                    <div class="checkerboard aspect-[3/2] flex items-center justify-center p-6">
                      <img
                        src={pngPath}
                        alt={`${inst.name} — ${layoutLabel} PNG`}
                        class="max-w-full max-h-full object-contain"
                      />
                    </div>
                    <div class="p-2 bg-white flex items-center justify-between">
                      <div>
                        <span class="text-xs font-medium text-primary-900">PNG</span>
                        <span class="text-[10px] text-surface-400 ml-1">{group.png.width} × {group.png.height}px</span>
                      </div>
                      <a href={pngPath} download class="p-1 rounded hover:bg-primary-50 text-surface-400 hover:text-primary-500 transition-colors" title="Descarcă PNG">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                      </a>
                    </div>
                  </div>
                );
              })()}
            </div>
          </div>
        );
      })}
    </section>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- ═══ CULORI OFICIALE ═══ -->
      {inst.colors && inst.colors.length > 0 && (
        <section>
          <h2 class="text-lg font-semibold text-primary-900 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
            </svg>
            Paletă de Culori
          </h2>
          <div class="space-y-3">
            {inst.colors.map((color: any) => (
              <div class="bg-white border border-surface-200 rounded p-3 flex items-start gap-3 group">
                <div class="relative w-12 h-12 rounded border border-surface-200 shrink-0">
                  <div
                    class="w-full h-full rounded"
                    style={`background-color: ${color.hex}`}
                  ></div>
                  <span class="accessibility-badge absolute -top-1 -right-1 text-xs font-bold px-1.5 py-0.5 rounded-full bg-white border border-gray-300 shadow-sm flex items-center gap-0.5 z-10" data-hex={color.hex} title="">
                    <span class="level-text"></span>
                    <svg class="info-icon w-3 h-3 opacity-75" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" clip-rule="evenodd" />
                    </svg>
                    <svg class="warning-icon w-3 h-3 opacity-75 hidden" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  </span>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2 mb-1">
                    <span class="font-medium text-sm text-primary-900">{color.name}</span>
                    {color.usage && (
                      <span class="px-1.5 py-0.5 bg-surface-100 rounded text-[10px] text-surface-500">
                        {COLOR_USAGE_LABELS[color.usage] || color.usage}
                      </span>
                    )}
                  </div>
                  <div class="grid grid-cols-2 gap-x-4 gap-y-0.5 text-xs text-surface-500">
                    <div class="font-mono flex items-center gap-1">
                      {color.hex}
                      <button
                        class="copy-color-btn p-0.5 rounded hover:bg-surface-100 text-surface-400 hover:text-surface-600 transition-colors max-sm:opacity-100 opacity-0 group-hover:opacity-100"
                        data-value={color.hex}
                        title="Copiază HEX"
                      >
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                      </button>
                    </div>
                    {color.rgb && (
                      <div class="flex items-center gap-1">
                        RGB: {color.rgb.join(', ')}
                        <button
                          class="copy-color-btn p-0.5 rounded hover:bg-surface-100 text-surface-400 hover:text-surface-600 transition-colors max-sm:opacity-100 opacity-0 group-hover:opacity-100"
                          data-value={`rgb(${color.rgb.join(', ')})`}
                          title="Copiază RGB"
                        >
                          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                          </svg>
                        </button>
                      </div>
                    )}
                    {color.cmyk && <div>CMYK: {color.cmyk.join(', ')}</div>}
                    {color.pantone && <div>Pantone {color.pantone}</div>}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- ═══ TIPOGRAFIE + RESURSE ═══ -->
      <div class="space-y-8">
        {/* Tipografie */}
        {inst.typography && inst.typography.primary && (
          <section>
            <h2 class="text-lg font-semibold text-primary-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
              </svg>
              Tipografie
            </h2>
            <div class="space-y-2">
              <div class="bg-white border border-surface-200 rounded p-3 flex items-center justify-between">
                <div>
                  <div class="font-medium text-sm text-primary-900">{inst.typography.primary.family}</div>
                  <div class="text-xs text-surface-500">Font principal</div>
                </div>
                {inst.typography.primary.url && (
                  <a
                    href={inst.typography.primary.url}
                    target="_blank"
                    rel="noopener"
                    class="text-xs text-primary-500 hover:text-primary-600"
                  >
                    Vezi font &rarr;
                  </a>
                )}
              </div>
              {inst.typography.secondary && (
                <div class="bg-white border border-surface-200 rounded p-3 flex items-center justify-between">
                  <div>
                    <div class="font-medium text-sm text-primary-900">{inst.typography.secondary.family}</div>
                    <div class="text-xs text-surface-500">Font secundar</div>
                  </div>
                  {inst.typography.secondary.url && (
                    <a
                      href={inst.typography.secondary.url}
                      target="_blank"
                      rel="noopener"
                      class="text-xs text-primary-500 hover:text-primary-600"
                    >
                      Vezi font &rarr;
                    </a>
                  )}
                </div>
              )}
            </div>
          </section>
        )}
      </div>
    </div>

    <!-- ═══ DESCĂRCĂRI RAPIDE ═══ -->
    {downloadables.length > 0 && (
      <section class="mt-10">
        <h2 class="text-lg font-semibold text-primary-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          Toate Descărcările
        </h2>
        <button id="download-zip" data-downloadables={JSON.stringify(downloadables)} data-slug={inst.slug} class="mb-4 px-4 py-2 bg-primary-500 text-white rounded hover:bg-primary-600 transition-colors flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          Descarcă toate ca ZIP
        </button>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          {downloadables.map((asset: any) => (
            <a
              href={asset.path}
              download
              class="flex items-center justify-between p-3 bg-white border border-surface-200 rounded hover:border-primary-300 transition-colors group"
            >
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-primary-50 rounded flex items-center justify-center">
                  <span class="text-[10px] font-bold text-primary-600">{asset.format.toUpperCase()}</span>
                </div>
                <div>
                  <div class="font-medium text-sm text-primary-900">{asset.label}</div>
                  {asset.width && asset.height && (
                    <div class="text-xs text-surface-500">{asset.width} × {asset.height}px</div>
                  )}
                </div>
              </div>
              <svg class="w-4 h-4 text-surface-400 group-hover:text-primary-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- ═══ INTEGRARE (tabs) ═══ -->
    <section class="mt-10">
      <h2 class="text-lg font-semibold text-primary-900 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
        </svg>
        Integrare
      </h2>
      <!-- Tab buttons -->
      <div class="flex border-b border-surface-200">
        <button type="button" data-tab-btn="cdn" class="tab-btn px-4 py-2 text-sm font-medium border-b-2 border-primary-500 text-primary-700 -mb-px">CDN</button>
        <button type="button" data-tab-btn="npm" class="tab-btn px-4 py-2 text-sm font-medium border-b-2 border-transparent text-surface-500 hover:text-surface-700 -mb-px">NPM</button>
        <button type="button" data-tab-btn="direct" class="tab-btn px-4 py-2 text-sm font-medium border-b-2 border-transparent text-surface-500 hover:text-surface-700 -mb-px">URL Direct</button>
      </div>
      <!-- Tab panels -->
      <div class="bg-white border border-t-0 border-surface-200 rounded-b-lg p-4">
        <!-- CDN Panel -->
        <div data-tab-panel="cdn" class="tab-panel">
          <p class="text-sm text-surface-600 mb-3">Include logo-ul direct în HTML:</p>
          <div class="relative bg-gray-50 p-3 rounded font-mono text-sm overflow-x-auto border">
            <span class="text-pink-600">&lt;img</span> <span class="text-blue-600">src</span>=<span class="text-green-600">"{cdnLogoPath}"</span> <span class="text-blue-600">alt</span>=<span class="text-green-600">"{inst.name}"</span><span class="text-pink-600">&gt;</span>
            <button type="button" class="copy-code-btn absolute top-2 right-2 p-1 rounded hover:bg-gray-200 text-gray-500 hover:text-gray-700 transition-colors" data-value={`<img src="${cdnLogoPath}" alt="${inst.name}">`} title="Copiază">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>
            </button>
          </div>
        </div>
        <!-- NPM Panel -->
        <div data-tab-panel="npm" class="tab-panel hidden">
          <p class="text-sm text-surface-600 mb-3">Instalează pachetul și importă datele:</p>
          <div class="space-y-2">
            <div class="relative bg-gray-50 p-3 rounded font-mono text-sm border">
              <span class="text-surface-500">$</span> npm install @identitate-ro/logos
              <button type="button" class="copy-code-btn absolute top-2 right-2 p-1 rounded hover:bg-gray-200 text-gray-500 hover:text-gray-700 transition-colors" data-value="npm install @identitate-ro/logos" title="Copiază">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>
              </button>
            </div>
            <div class="relative bg-gray-50 p-3 rounded font-mono text-sm border overflow-x-auto">
              <span class="text-pink-600">import</span> logos <span class="text-pink-600">from</span> <span class="text-green-600">'@identitate-ro/logos'</span>;<br>
